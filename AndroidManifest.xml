<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.storybuilder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.Light" >
        <activity
            android:name="com.example.storybuilder.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.storybuilder.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.TitleAuthorActivity"
            android:label="@string/title_activity_title_author"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.RandomStoryActivity"
            android:label="@string/title_activity_random_story"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.BrowseStoriesActivity"
            android:label="@string/title_activity_browse_stories"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.MyStoriesActivity"
            android:label="@string/title_activity_my_stories"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.HelpActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.StoryMakerActivity"
            android:label="@string/title_activity_story_maker"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.AudioActivity"
            android:label="@string/title_activity_audio"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.DrawToolActivity"
            android:label="@string/title_activity_draw_tool"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.EditStoryMakerActivity"
            android:label="@string/title_activity_edit_story_maker"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.ViewStoryActivity"
            android:label="@string/title_activity_view_story"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.TitleAuthor2Activity"
            android:label="@string/title_activity_title_author2"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.storybuilder.KeyActivity"
            android:label="@string/title_activity_key" 
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
